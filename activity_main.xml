<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Displaying the dice images -->
    <ImageView
        android:id="@+id/diceImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/dice1" />

    <ImageView
        android:id="@+id/diceImage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/diceImage1"
        android:layout_marginStart="20dp"
        android:src="@drawable/dice2" />

    <ImageView
        android:id="@+id/diceImage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diceImage1"
        android:layout_marginTop="20dp"
        android:src="@drawable/dice3" />

    <ImageView
        android:id="@+id/diceImage4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/diceImage3"
        android:layout_below="@id/diceImage1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/dice4" />

</RelativeLayout>
